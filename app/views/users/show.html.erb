<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-lg-3 col-xs-3">
    <section>
      <h1><%= @user.name %></h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-lg-9 col-xs-9">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
     <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
     <% else %>
        <h3>No Microposts found</h3>
    <% end %>
  </div>

</div>